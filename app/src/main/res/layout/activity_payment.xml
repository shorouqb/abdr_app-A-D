<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".payment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price Details:"
        android:textSize="16sp"
        android:id="@+id/tv"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:background="@drawable/bordernobg"
        android:id="@+id/tv1"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_below="@+id/tv"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="180dp"
        android:layout_height="3dp"
        android:background="@drawable/bordernobg"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv1"
        android:id="@+id/tv4"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv4"
        android:id="@+id/tv2"
        android:textSize="16sp"
        android:text="Extra Payments:"
        android:layout_marginTop="10dp"/>
    <Spinner
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:id="@+id/res"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/tv2"
        android:layout_centerHorizontal="true"
        android:entries="@array/listres"
        android:gravity="center"
        android:background="@drawable/bordernobg"
        tools:textAlignment="center"
        />
    <EditText
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/et1"
        android:hint="Extra Amount (SAR)"
        android:inputType="textMultiLine"
        android:gravity="center"
        android:textSize="14sp"
        android:background="@drawable/border"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/res"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/et"
        android:hint="KG/MINUTES/OTHER REASON "
        android:inputType="textMultiLine"
        android:gravity="center"
        android:textSize="14sp"
        android:background="@drawable/border"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/et1"
       android:layout_centerHorizontal="true"/>
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/don"
        android:id="@+id/done_btn"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        />
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/c"
        android:id="@+id/back_btn"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
       android:layout_alignParentBottom="true"
        android:background="@null"
        android:layout_marginLeft="50dp"
        />




</RelativeLayout>
