<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_show_suppotes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Show_support">

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:id="@+id/Search_btn"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ser"
        android:background="@null"
       android:layout_centerHorizontal="true"
        android:layout_below="@+id/spinner_o"
        android:layout_marginTop="10dp"/>

    <GridView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:id="@+id/support_grid"
        android:columnWidth="100dp"
        android:numColumns="2"
        android:verticalSpacing="15dp"
        android:horizontalSpacing="15dp"
        android:stretchMode="columnWidth"
        android:layout_below="@+id/Search_btn"
        android:layout_marginTop="10dp"/>

    <TextView
        android:text="From :  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="10dp"

        />

    <Spinner
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:entries="@array/supports_filter"
        android:id="@+id/spinner_f"
        android:background="@drawable/border"
        tools:textAlignment="center"
        android:padding="5dip"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/textView4"
        android:layout_marginTop="5dp"/>
    <TextView
        android:text="Status :  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:id="@+id/textView6"
        android:layout_marginTop="20dp"

     />
    <Spinner
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:entries="@array/supports_status"
        android:id="@+id/spinner_s"
        android:background="@drawable/border"
        tools:textAlignment="center"
        android:padding="5dip"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/spinner_f"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/textView6" />
<TextView
        android:text="Order by :  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginTop="20dp"
     android:layout_below="@+id/textView6"
       />

    <Spinner
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:entries="@array/order"
        android:id="@+id/spinner_o"
        android:background="@drawable/border"
        tools:textAlignment="center"
        android:padding="5dip"
        android:layout_toRightOf="@+id/textView5"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/spinner_s"
      />




</RelativeLayout>
