<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_scan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".scan">
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:text="Number of Barcode's to Scan:"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/lcount"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text=""
        android:gravity="center"
        android:textSize="15sp"
        android:layout_below="@id/tv1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bordernobg"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:background="@null"
        android:id="@+id/capture"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:layout_below="@id/lcount"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/barsc" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/capture"
        android:text="Scan"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/tv"
        />
<ImageView
    android:layout_width="150dp"
    android:layout_height="70dp"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/lcount"
    android:id="@+id/imv"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lcount"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:id="@+id/content"
        android:layout_marginRight="100dp"
        android:text=""/>
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:id="@+id/add"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:layout_below="@id/content"
        android:layout_marginRight="180dp"
        android:layout_centerInParent="true"
        android:src="@drawable/add"/>
    <GridView
        android:layout_marginTop="30dp"
        android:layout_width="350dp"
        android:layout_height="280dp"
        android:layout_below="@+id/tv"
        android:id="@+id/bargrid"
        android:columnWidth="100dp"
        android:numColumns="2"
        android:background="@drawable/border"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"/>
    <ImageButton
    android:layout_width="30dp"
    android:layout_height="30dp"
    app:srcCompat="@drawable/don"
    android:id="@+id/done_btn"
    android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
    android:background="@null"
    android:layout_alignParentRight="true"
    android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
    />
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/c"
        android:id="@+id/back_btn"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:background="@null"
      android:layout_marginLeft="50dp"
        />

</RelativeLayout>
