<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_booking_support_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".booking_support_info">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:id="@+id/sv"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Booking reference"
                android:id="@+id/s1"
                android:gravity="center"
                tools:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                />
            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:ems="10"
                android:id="@+id/bookref"
                tools:textAlignment="center"
                android:background="@drawable/bordernobg"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/s1"/>


            <TextView
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:inputType="none"
                android:ems="10"
                android:layout_marginTop="15dp"
                android:id="@+id/v"
                android:background="@drawable/border"
                android:layout_below="@+id/bookref"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Passenger Complain"
                android:id="@+id/s2"
                android:gravity="center"
                tools:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/v"
                android:textSize="18dp"
                />
            <TextView
                android:text=""
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:id="@+id/pcom"
                android:gravity="center"
                tools:textAlignment="center"
                android:background="@drawable/bordernobg"
                android:inputType="textMultiLine"
                android:layout_below="@+id/s2"
                android:textSize="16dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/panswer"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/answ"
                android:layout_below="@+id/pcom"
               />

            <TextView
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:inputType="none"
                android:ems="10"
                android:layout_marginTop="15dp"
                android:id="@+id/v1"
                android:background="@drawable/border"
                android:layout_below="@+id/panswer"
                android:layout_centerHorizontal="true"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Driver Complain"
                android:id="@+id/s3"
                android:gravity="center"
                tools:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/v1"
                android:textSize="18dp"
                />
            <TextView
                android:text=""
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:id="@+id/dcom"
                android:gravity="center"
                tools:textAlignment="center"
                android:background="@drawable/bordernobg"
                android:inputType="textMultiLine"
                android:layout_below="@+id/s3"
                android:textSize="16dp"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/danswer"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/answ"
               android:layout_below="@+id/dcom"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
