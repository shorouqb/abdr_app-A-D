<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_booking_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".booking_info">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:id="@+id/barcode"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="420dp"
        app:srcCompat="@drawable/b" />
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:id="@+id/support"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="420dp"
        app:srcCompat="@drawable/ss" />
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:id="@+id/rating"
        android:scaleType="fitXY"
        android:layout_marginLeft="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="420dp"
        app:srcCompat="@drawable/r" />
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:id="@+id/email"
        android:scaleType="fitXY"
        android:layout_marginLeft="150dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="420dp"
        app:srcCompat="@drawable/em" />
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:id="@+id/contact"
        android:scaleType="fitXY"
        android:layout_marginLeft="290dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="420dp"
        app:srcCompat="@drawable/contact" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:text="User Information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/tv"
                tools:textAlignment="center"
                tools:textSize="18sp" />
            <TextView
                android:text="TextView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:id="@+id/userinfo"
                android:gravity="center"
                tools:textAlignment="center"
                android:background="@drawable/border"
                android:inputType="textMultiLine"
                />
            <TextView
                android:text="Flight Information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/tvv"
                tools:textAlignment="center"
                tools:textSize="18sp" />
            <TextView
                android:text="TextView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:id="@+id/flightinfo"
                android:gravity="center"
                tools:textAlignment="center"
                android:background="@drawable/border"
                android:inputType="textMultiLine"
                />
            <TextView
                android:text="Luggage Information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:id="@+id/tv1"
                tools:textAlignment="center"
                tools:textSize="18sp" />
            <TextView
                android:text="TextView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:id="@+id/luggageinfo"
                android:gravity="center"
                tools:textAlignment="center"
                android:background="@drawable/border"
                android:inputType="textMultiLine"/>
            <TextView
                android:text="Passengers Information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:id="@+id/tv2"
                tools:textAlignment="center"
                tools:textSize="18sp" />

            <TextView
                android:text="TextView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:id="@+id/passengersinfo"
                android:gravity="center"
                tools:textAlignment="center"
                android:background="@drawable/border"
                android:inputType="textMultiLine"/>

            <Button
                android:text="Driver Infromation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scrollView4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:id="@+id/driver" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:text="Booking Status: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="11dp"
                        android:id="@+id/tv4"
                        tools:textAlignment="center"
                        tools:textSize="18sp" />
                    <TextView
                        android:text=" "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="11dp"
                        android:id="@+id/status"
                        tools:textAlignment="center"

                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                    <TextView
                        android:text="Booking Time: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="11dp"
                        android:id="@+id/tv5"
                        tools:textAlignment="center"
                        tools:textSize="18sp" />
                    <TextView
                        android:text=" "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="11dp"
                        android:id="@+id/time"
                        tools:textAlignment="center"

                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                    <TextView
                        android:text="Booking Date: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="11dp"
                        android:id="@+id/tv6"
                        tools:textAlignment="center"
                        tools:textSize="18sp" />
                    <TextView
                        android:text=" "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="11dp"
                        android:id="@+id/date"
                        tools:textAlignment="center"

                        android:background="@drawable/border"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                    <TextView
                        android:text="Booking Fee: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="11dp"
                        android:id="@+id/tv7"
                        tools:textAlignment="center"
                        tools:textSize="18sp" />
                    <TextView
                        android:text=" "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="11dp"
                        android:id="@+id/fee"
                        tools:textAlignment="center"
                        android:background="@drawable/border"/>
                    <TextView
                        android:text="Price Details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/priceD"
                        tools:text="Price Details"
                        android:layout_marginLeft="5dp"
                        android:autoLink="phone"
                        android:clickable="true"
                        android:layout_marginTop="11dp"
                        android:gravity="center"
                        style="@style/Hyperlink"
                        />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
